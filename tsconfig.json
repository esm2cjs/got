{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "build/esm",
		"target": "es2020",
		"lib": [
			"es2020"
		],
		"module": "ES2020",
		"moduleResolution": "node",
		"noPropertyAccessFromIndexSignature": false,
		"isolatedModules": true
	},
	"include": [
		"source"
	],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}
